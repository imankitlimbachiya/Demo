<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base application theme.-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Customize your theme here.-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="BottomNavigationView">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="android:background">@color/white</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="itemTextAppearanceInactive">@style/NavigationText</item>
        <item name="itemTextAppearanceActive">@style/NavigationTextSelected</item>
    </style>

    <style name="NavigationText">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="NavigationTextSelected">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.Swipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HomeBaseDialogAnimation" parent="MaterialAlertDialog.Material3">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--<item name="android:windowAnimationStyle">@style/HomeBaseDialogAnimation.Window</item>-->
    </style>

    <style name="HomeBaseDialogWithOutAnimation" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">#fff</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

</resources>