<resources>

    <style name="BottomNavigationView">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/white</item>
        <item name="itemRippleColor">@color/blue</item>
        <item name="itemTextAppearanceInactive">@style/NavigationText</item>
        <item name="itemTextAppearanceActive">@style/NavigationTextSelected</item>
    </style>

    <style name="NavigationText">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="NavigationTextSelected">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

</resources>